<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       ">

    <bean id="actionRepository" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.mobenga.health.model.persistence.repository.MonitoredActionRepository" />
    </bean>

    <bean id="configurationRepository" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.mobenga.health.model.persistence.repository.ConfiguredVariableRepository" />
    </bean>

    <bean id="structureRepository" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.mobenga.health.model.persistence.repository.StructureModuleRepository" />
    </bean>

    <bean id="heartbeatRepository" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.mobenga.health.model.persistence.repository.HeartBeatRepository" />
    </bean>

</beans>